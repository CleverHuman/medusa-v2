<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.medusa.mall.mapper.MallPageConfigMapper">
    <resultMap id="MallPageConfigResultMap" type="com.medusa.mall.domain.MallPageConfig">
        <id property="id" column="id" />
        <result property="page" column="page" />
        <result property="section" column="section" />
        <result property="configKey" column="config_key" />
        <result property="configValue" column="config_value" />
        <result property="sort" column="sort" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="updateBy" column="update_by" />
        <result property="remark" column="remark" />
    </resultMap>

    <select id="selectMallPageConfigById" resultMap="MallPageConfigResultMap">
        SELECT * FROM mall_page_config WHERE id = #{id}
    </select>

    <select id="selectMallPageConfigList" resultMap="MallPageConfigResultMap">
        SELECT * FROM mall_page_config
        <where>
            <if test="page != null and page != ''">AND page = #{page}</if>
            <if test="section != null and section != ''">AND section = #{section}</if>
            <if test="configKey != null and configKey != ''">AND config_key = #{configKey}</if>
        </where>
        ORDER BY sort ASC, id ASC
    </select>

    <insert id="insertMallPageConfig" parameterType="com.medusa.mall.domain.MallPageConfig">
        INSERT INTO mall_page_config (page, section, config_key, config_value, sort, update_by, remark)
        VALUES (#{page}, #{section}, #{configKey}, #{configValue}, #{sort}, #{updateBy}, #{remark})
    </insert>

    <update id="updateMallPageConfig" parameterType="com.medusa.mall.domain.MallPageConfig">
        UPDATE mall_page_config
        SET page = #{page}, section = #{section}, config_key = #{configKey}, config_value = #{configValue}, sort = #{sort}, update_by = #{updateBy}, remark = #{remark}
        WHERE id = #{id}
    </update>

    <delete id="deleteMallPageConfigById" parameterType="long">
        DELETE FROM mall_page_config WHERE id = #{id}
    </delete>

    <delete id="deleteMallPageConfigByIds" parameterType="long">
        DELETE FROM mall_page_config WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper> 