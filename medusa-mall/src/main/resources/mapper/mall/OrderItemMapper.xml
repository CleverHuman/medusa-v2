<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.medusa.mall.mapper.OrderItemMapper">
    <resultMap type="com.medusa.mall.domain.order.OrderItem" id="OrderItemResult">
        <id     property="id"           column="id"            />
        <result property="orderId"      column="order_id"      />
        <result property="orderSn"      column="order_sn"      />
        <result property="productId"    column="product_id"    />
        <result property="productOrigin"    column="product_origin"    />
        <result property="originId"    column="origin_id"    />
        <result property="sku"          column="sku"           />
        <result property="productName"  column="product_name"  />
        <result property="productSpec"  column="product_spec"  />
        <result property="productImage" column="product_image" />
        <result property="quantity"     column="quantity"      />
        <result property="price"        column="price"         />
        <result property="totalPrice"   column="total_price"   />
        <result property="totalCoin"    column="total_coin"    />
        <result property="createTime"   column="create_time"   />
        <result property="updateTime"   column="update_time"   />
        <result property="createBy"     column="create_by"     />
        <result property="updateBy"     column="update_by"     />
        <result property="remark"       column="remark"        />
    </resultMap>

    <sql id="selectOrderItemVo">
        select id, order_id, order_sn, product_id, product_origin, origin_id, sku, product_name, product_spec, product_image, quantity, price, total_price, total_coin, create_time, update_time, create_by, update_by, remark
        from mall_order_item
    </sql>

    <select id="selectOrderItemsByOrderId" parameterType="String" resultMap="OrderItemResult">
        <include refid="selectOrderItemVo"/>
        where order_id = #{orderId}
    </select>

    <insert id="insertOrderItem" parameterType="com.medusa.mall.domain.order.OrderItem">
        insert into mall_order_item (
            id, order_id, order_sn, product_id, product_origin, origin_id, sku, product_name, product_spec, product_image,
            quantity, price, total_price, total_coin, create_time, update_time, create_by, update_by, remark
        ) values (
            #{id}, #{orderId}, #{orderSn}, #{productId}, #{productOrigin}, #{originId}, #{sku}, #{productName}, #{productSpec}, #{productImage},
            #{quantity}, #{price}, #{totalPrice}, #{totalCoin}, #{createTime}, #{updateTime}, #{createBy}, #{updateBy}, #{remark}
        )
    </insert>

    <update id="updateOrderItem" parameterType="com.medusa.mall.domain.order.OrderItem">
        update mall_order_item
        <set>
            <if test="productName != null">product_name = #{productName},</if>
            <if test="productSpec != null">product_spec = #{productSpec},</if>
            <if test="productImage != null">product_image = #{productImage},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="price != null">price = #{price},</if>
            <if test="totalPrice != null">total_price = #{totalPrice},</if>
            <if test="totalCoin != null">total_coin = #{totalCoin},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteOrderItemById" parameterType="String">
        delete from mall_order_item where id = #{id}
    </delete>

    <delete id="deleteOrderItemsByOrderId" parameterType="String">
        delete from mall_order_item where order_id = #{orderId}
    </delete>
</mapper> 
