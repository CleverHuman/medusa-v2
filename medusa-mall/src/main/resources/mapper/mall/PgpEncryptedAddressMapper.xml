<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.medusa.mall.mapper.PgpEncryptedAddressMapper">
    
    <resultMap type="PgpEncryptedAddress" id="PgpEncryptedAddressResult">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="keyId" column="key_id"/>
        <result property="encryptedAddress" column="encrypted_address"/>
        <result property="originalHash" column="original_hash"/>
        <result property="encryptionTime" column="encryption_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectPgpEncryptedAddressVo">
        select id, order_id, user_id, key_id, encrypted_address, original_hash, encryption_time, create_time, update_time, remark from mall_pgp_encrypted_address
    </sql>

    <select id="selectPgpEncryptedAddressList" parameterType="PgpEncryptedAddress" resultMap="PgpEncryptedAddressResult">
        <include refid="selectPgpEncryptedAddressVo"/>
        <where>  
            <if test="orderId != null  and orderId != ''"> and order_id = #{orderId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="keyId != null "> and key_id = #{keyId}</if>
            <if test="originalHash != null  and originalHash != ''"> and original_hash like concat('%', #{originalHash}, '%')</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectPgpEncryptedAddressById" parameterType="Long" resultMap="PgpEncryptedAddressResult">
        <include refid="selectPgpEncryptedAddressVo"/>
        where id = #{id}
    </select>

    <select id="selectPgpEncryptedAddressByOrderId" parameterType="String" resultMap="PgpEncryptedAddressResult">
        <include refid="selectPgpEncryptedAddressVo"/>
        where order_id = #{orderId}
    </select>

    <select id="selectPgpEncryptedAddressByUserId" parameterType="Long" resultMap="PgpEncryptedAddressResult">
        <include refid="selectPgpEncryptedAddressVo"/>
        where user_id = #{userId}
        order by create_time desc
    </select>

    <select id="selectPgpEncryptedAddressByKeyId" parameterType="Long" resultMap="PgpEncryptedAddressResult">
        <include refid="selectPgpEncryptedAddressVo"/>
        where key_id = #{keyId}
        order by create_time desc
    </select>
        
    <insert id="insertPgpEncryptedAddress" parameterType="PgpEncryptedAddress" useGeneratedKeys="true" keyProperty="id">
        insert into mall_pgp_encrypted_address
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null and orderId != ''">order_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="keyId != null">key_id,</if>
            <if test="encryptedAddress != null and encryptedAddress != ''">encrypted_address,</if>
            <if test="originalHash != null and originalHash != ''">original_hash,</if>
            <if test="encryptionTime != null">encryption_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null and orderId != ''">#{orderId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="keyId != null">#{keyId},</if>
            <if test="encryptedAddress != null and encryptedAddress != ''">#{encryptedAddress},</if>
            <if test="originalHash != null and originalHash != ''">#{originalHash},</if>
            <if test="encryptionTime != null">#{encryptionTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updatePgpEncryptedAddress" parameterType="PgpEncryptedAddress">
        update mall_pgp_encrypted_address
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null and orderId != ''">order_id = #{orderId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="keyId != null">key_id = #{keyId},</if>
            <if test="encryptedAddress != null and encryptedAddress != ''">encrypted_address = #{encryptedAddress},</if>
            <if test="originalHash != null and originalHash != ''">original_hash = #{originalHash},</if>
            <if test="encryptionTime != null">encryption_time = #{encryptionTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePgpEncryptedAddressById" parameterType="Long">
        delete from mall_pgp_encrypted_address where id = #{id}
    </delete>

    <delete id="deletePgpEncryptedAddressByIds" parameterType="String">
        delete from mall_pgp_encrypted_address where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper> 